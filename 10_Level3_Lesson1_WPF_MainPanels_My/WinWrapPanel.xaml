<Window x:Class="_10_Level3_Lesson1_WPF_MainPanels_My.WinWrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_Level3_Lesson1_WPF_MainPanels_My"
        mc:Ignorable="d"
        Title="WinWrapPanel" SizeToContent="WidthAndHeight"   MaxWidth="800" MaxHeight="800">
    <WrapPanel Orientation="Vertical">
        <WrapPanel>
            <TextBlock Text="Обычный TextBlock"/>
            <Image Source="Crash\pict_WrapPanel.png"  MaxWidth="640" MaxHeight="480"/>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="А тут еще один фрап панел"/>
            <TextBlock TextWrapping="Wrap" MaxHeight="400"
                       HorizontalAlignment="Right"
                Text="WrapPanel распологает в себе элементы слева -->> направо. При уменьщении окна по горизонтали она должна переносить элементы на новую строчку"/>
        </WrapPanel>

    </WrapPanel>
</Window>
